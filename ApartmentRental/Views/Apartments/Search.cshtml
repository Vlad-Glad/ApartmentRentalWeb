@model List<ApartmentRental.Models.Apartment>

@{
    ViewData["Title"] = "Search";
    var q = (string?)ViewBag.Query;
}

<h1>Search</h1>

<form asp-controller="Apartments" asp-action="Search" method="get" class="mb-3">
    <div class="input-group">
        <input name="q" value="@q" class="form-control" placeholder="Search by title or lessor email..." />
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

@if (string.IsNullOrWhiteSpace(q))
{
    <p class="text-muted">Enter a title or lessor email to search.</p>
}
else if (Model.Count == 0)
{
    <p>No results found for <strong>@q</strong>.</p>
}
else
{
    <p class="text-muted">Found @Model.Count result(s) for <strong>@q</strong>.</p>

    <div class="list-group">
        @foreach (var a in Model)
        {
            <a class="list-group-item list-group-item-action"
               asp-controller="Apartments"
               asp-action="Landing"
               asp-route-id="@a.Id">
                <div class="d-flex justify-content-between">
                    <strong>@a.Title</strong>
                    <span class="text-muted">$@a.Price</span>
                </div>
                <div class="small text-muted">
                    Lessor: @a.Lessor?.Email
                </div>
            </a>
        }
    </div>
}
