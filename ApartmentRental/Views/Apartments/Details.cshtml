@model ApartmentRental.Models.Apartment

@{
    ViewData["Title"] = "Apartment details";
}

<div class="row justify-content-center">
    <div class="col-lg-9">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h1 class="h4 mb-1">Apartment details</h1>
            </div>
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary app-pill">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary app-pill">Back</a>
            </div>
        </div>

        <div class="card app-card">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Title</dt>
                    <dd class="col-sm-9">@Model.Title</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Description) ? Model.Description : "—")</dd>

                    <dt class="col-sm-3">Price</dt>
                    <dd class="col-sm-9 fw-semibold">@Model.Price.ToString("N0") $/month</dd>

                    <dt class="col-sm-3">City</dt>
                    <dd class="col-sm-9">@Model.City</dd>

                    <dt class="col-sm-3">Address</dt>
                    <dd class="col-sm-9">@Model.FullAddress</dd>

                    <dt class="col-sm-3">Lessor</dt>
                    <dd class="col-sm-9">
                        @(Model.Lessor?.Email ?? Model.Lessor?.UserName ?? Model.LessorId)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
