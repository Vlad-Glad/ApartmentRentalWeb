@model ApartmentRental.Models.Apartment

@{
    ViewData["Title"] = "Delete apartment";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card app-card border border-danger-subtle">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h1 class="h4 mb-1 text-danger">Delete apartment</h1>
                        <div class="app-muted">This action cannot be undone.</div>
                    </div>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm app-pill">
                        <i class="bi bi-arrow-left me-1"></i> Back
                    </a>
                </div>

                <div class="alert alert-warning">
                    Are you sure you want to delete <strong>@Model.Title</strong>?
                </div>

                <dl class="row">
                    <dt class="col-sm-3">Price</dt>
                    <dd class="col-sm-9">@Model.Price.ToString("N0") $/month</dd>

                    <dt class="col-sm-3">City</dt>
                    <dd class="col-sm-9">@Model.City</dd>

                    <dt class="col-sm-3">Address</dt>
                    <dd class="col-sm-9">@Model.FullAddress</dd>
                </dl>

                <form asp-action="Delete" class="d-flex gap-2">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger app-pill">
                        <i class="bi bi-trash3 me-1"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary app-pill">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
