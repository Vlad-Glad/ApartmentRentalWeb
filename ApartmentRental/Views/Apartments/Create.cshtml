@model ApartmentRental.Models.Apartment

@{
    ViewData["Title"] = "Create apartment";
}

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card app-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h1 class="h4 mb-1">Create apartment</h1>
                        <div class="app-muted">Fill in the details and upload photos.</div>
                    </div>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm app-pill">
                        <i class="bi bi-arrow-left me-1"></i> Back
                    </a>
                </div>

                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Price" class="form-control" />
                            <span class="input-group-text">$/month</span>
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="mb-2">
                        <label asp-for="FullAddress" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="FullAddress"
                                   class="form-control"
                                   id="addressInput"
                                   placeholder="City, street, building number" />

                            <button type="button" id="findOnMapBtn" class="btn btn-outline-secondary">
                                <i class="bi bi-search me-1"></i> Find address
                            </button>
                        </div>
                        <div class="form-text">
                            Start typing, pick a suggestion — the map will update automatically.
                        </div>
                        <span asp-validation-for="FullAddress" class="text-danger"></span>
                    </div>

                    <div class="mb-3 mt-2">
                        <div id="create-map" class="border rounded" style="height: 320px;"></div>
                    </div>

                    <!-- hidden fields -->
                    <input type="hidden" id="IsAddressValid" name="IsAddressValid" value="false" />
                    <input type="hidden" asp-for="City" id="City" />
                    <input type="hidden" asp-for="Latitude" id="Latitude" />
                    <input type="hidden" asp-for="Longitude" id="Longitude" />

                    <div class="mb-3">
                        <label for="photos" class="form-label">Apartment photos</label>
                        <input type="file" id="photos" name="photos" class="form-control" multiple />
                        <div class="form-text">You can select multiple files.</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary app-pill">
                            <i class="bi bi-check2-circle me-1"></i> Create
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary app-pill">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Head {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

    <script>
        let createMap;
        let createMarker;

        document.addEventListener("DOMContentLoaded", function () {

            createMap = L.map('create-map').setView([49.0, 31.0], 6);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(createMap);

            const $addressInput = $("#addressInput");
            const $lat = $("#Latitude");
            const $lng = $("#Longitude");
            const $city = $("#City");
            const $valid = $("#IsAddressValid");

            $addressInput.on("input", function () {
                $valid.val("false");
                $lat.val("");
                $lng.val("");
            });

            $addressInput.autocomplete({
                minLength: 3,
                delay: 300,
                source: function (request, response) {
                    $.getJSON("/api/addresses/search", { q: request.term })
                        .done(function (data) {
                            const items = data.map(function (item) {
                                return {
                                    label: item.label,
                                    value: item.label,
                                    city: item.city,
                                    latitude: item.latitude,
                                    longitude: item.longitude
                                };
                            });
                            response(items);
                        })
                        .fail(function () { response([]); });
                },
                select: function (event, ui) {
                    const item = ui.item;

                    $addressInput.val(item.label);
                    $city.val(item.city || "");
                    $lat.val(item.latitude.toString().replace(',', '.'));
                    $lng.val(item.longitude.toString().replace(',', '.'));
                    $valid.val("true");

                    centerMapOn(item.latitude, item.longitude);
                    return false;
                }
            });

            document.getElementById("findOnMapBtn")
                .addEventListener("click", async function () {
                    const query = $addressInput.val().trim();
                    $valid.val("false");

                    if (!query || query.length < 3) {
                        alert("Please enter a valid address (at least 3 characters).");
                        return;
                    }

                    try {
                        const data = await $.getJSON("/api/addresses/search", { q: query });
                        if (!data || data.length === 0) {
                            alert("No results found. Please refine the address.");
                            return;
                        }

                        const first = {
                            label: data[0].label,
                            value: data[0].label,
                            city: data[0].city,
                            latitude: data[0].latitude,
                            longitude: data[0].longitude
                        };

                        fillAddressFromSuggestion(first);
                    } catch (e) {
                        console.error(e);
                        alert("An error occurred while searching for the address.");
                    }
                });

            function fillAddressFromSuggestion(item) {
                $addressInput.val(item.label);
                $city.val(item.city || "");
                $lat.val(item.latitude.toString().replace(',', '.'));
                $lng.val(item.longitude.toString().replace(',', '.'));
                $valid.val("true");

                centerMapOn(item.latitude, item.longitude);
            }
        });

        function centerMapOn(lat, lon) {
            if (!createMap || isNaN(lat) || isNaN(lon)) return;

            createMap.setView([lat, lon], 15);

            if (createMarker) {
                createMap.removeLayer(createMarker);
            }
            createMarker = L.marker([lat, lon]).addTo(createMap);
        }
    </script>
}
