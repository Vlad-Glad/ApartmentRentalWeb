@model ApartmentRental.Models.Apartment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Apartment</h4>
<hr />
<div class="row">
    <div class="col-md-6 col-lg-5">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Price" class="form-control" />
                    <span class="input-group-text">₴/міс</span>
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="FullAddress" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="FullAddress"
                           class="form-control"
                           id="addressInput"
                           placeholder="Місто, вулиця, номер будинку" />

                    <button type="button"
                            id="findOnMapBtn"
                            class="btn btn-outline-secondary">
                        Пошук адреси
                    </button>
                </div>
                <small class="form-text text-muted">
                    Почніть вводити адресу, оберіть варіант із підказок — карта оновиться автоматично.
                </small>
                <span asp-validation-for="FullAddress" class="text-danger"></span>
            </div>

            <div class="mb-3 mt-2">
                <div id="create-map" class="border rounded" style="height: 300px;"></div>
            </div>

            <!-- hidden-поля -->
            <input type="hidden" id="IsAddressValid" name="IsAddressValid" value="false" />
            <input type="hidden" asp-for="City" id="City" />
            <input type="hidden" asp-for="Latitude" id="Latitude" />
            <input type="hidden" asp-for="Longitude" id="Longitude" />

            <div class="form-group mb-3">
                <label for="photos" class="control-label">Фото квартири</label>
                <input type="file" id="photos" name="photos" class="form-control" multiple />
                <small class="form-text text-muted">Можна обрати кілька файлів.</small>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

<style>
    .ui-autocomplete {
        z-index: 2000 !important;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        let createMap;
        let createMarker;

        document.addEventListener("DOMContentLoaded", function () {

            createMap = L.map('create-map').setView([49.0, 31.0], 6);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(createMap);

            const $addressInput = $("#addressInput");
            const $lat = $("#Latitude");
            const $lng = $("#Longitude");
            const $city = $("#City");
            const $valid = $("#IsAddressValid");

            $addressInput.on("input", function () {
                $valid.val("false");
                $lat.val("");
                $lng.val("");
            });

            $addressInput.autocomplete({
                minLength: 3,
                delay: 300,
                source: function (request, response) {
                    $.getJSON("/api/addresses/search", { q: request.term })
                        .done(function (data) {
                            const items = data.map(function (item) {
                                return {
                                    label: item.label,
                                    value: item.label,
                                    city: item.city,
                                    latitude: item.latitude,
                                    longitude: item.longitude
                                };
                            });
                            response(items);
                        })
                        .fail(function () {
                            response([]);
                        });
                },
                select: function (event, ui) {
                    const item = ui.item;

                    $addressInput.val(item.label);
                    $city.val(item.city || "");
                    $lat.val(item.latitude.toString().replace(',', '.'));
                    $lng.val(item.longitude.toString().replace(',', '.'));
                    $valid.val("true");

                    centerMapOn(item.latitude, item.longitude);

                    return false;
                }
            });

            document.getElementById("findOnMapBtn")
                .addEventListener("click", async function () {
                const query = $addressInput.val().trim();
                $valid.val("false");

                if (!query || query.length < 3) {
                    alert("Введіть коректну адресу (мінімум 3 символи).");
                    return;
                }

                try {
                    const data = await $.getJSON("/api/addresses/search", { q: query });
                    if (!data || data.length === 0) {
                        alert("Нічого не знайдено. Спробуйте уточнити адресу.");
                        return;
                    }

                    const first = {
                        label: data[0].label,
                        value: data[0].label,
                        city: data[0].city,
                        latitude: data[0].latitude,
                        longitude: data[0].longitude
                    };

                    fillAddressFromSuggestion(first);
                } catch (e) {
                    console.error(e);
                    alert("Сталася помилка при пошуку адреси.");
                }
            });

            function fillAddressFromSuggestion(item) {
                $addressInput.val(item.label);
                $city.val(item.city || "");
                $lat.val(item.latitude.toString().replace(',', '.'));
                $lng.val(item.longitude.toString().replace(',', '.'));
                $valid.val("true");

                centerMapOn(item.latitude, item.longitude);
            }
        });

        function centerMapOn(lat, lon) {
            if (!createMap || isNaN(lat) || isNaN(lon)) return;

            createMap.setView([lat, lon], 15);

            if (createMarker) {
                createMap.removeLayer(createMarker);
            }
            createMarker = L.marker([lat, lon]).addTo(createMap);
        }
    </script>
}



