<div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <div>
        <h1 class="h3 mb-1">Apartments for rent in Ukraine</h1>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Create" class="btn btn-primary app-pill">
            <i class="bi bi-plus-circle me-1"></i> Add apartment
        </a>
        <a asp-action="Map" class="btn btn-outline-success app-pill">
            <i class="bi bi-geo-alt me-1"></i> Map
        </a>
    </div>
</div>


<div class="card app-card mb-3">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-2 align-items-end">
            <div class="col-md-5">
                <label for="city" class="form-label">City</label>
                <select id="city" name="city" class="form-select" asp-items="ViewBag.Cities">
                    <option value="">All cities</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100 app-pill">
                    <i class="bi bi-funnel me-1"></i> Filter
                </button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.SelectedCity))
        {
            <div class="mt-2 app-muted">
                Selected city: <strong>@ViewBag.SelectedCity</strong>
            </div>
        }
    </div>
</div>

<div class="card app-card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table app-table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th class="d-none d-lg-table-cell">Description</th>
                        <th>Price</th>
                        <th>City</th>
                        <th class="d-none d-md-table-cell">Address</th>
                        <th class="text-end"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Title</td>
                            <td class="d-none d-lg-table-cell text-truncate" style="max-width: 320px;">
                                @(string.IsNullOrWhiteSpace(item.Description) ? "—" : item.Description)
                            </td>
                            <td class="fw-semibold">@item.Price.ToString("N0") $/month</td>
                            <td>@item.City</td>
                            <td class="d-none d-md-table-cell text-truncate" style="max-width: 320px;">
                                @item.FullAddress
                            </td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Details</a>
                                    <a asp-action="Landing" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Landing</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
