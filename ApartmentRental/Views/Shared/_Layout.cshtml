<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@(ViewData["Title"] != null ? $"{ViewData["Title"]} - ApartmentRental" : "ApartmentRental")</title>

    <meta name="description" content="@(ViewData["MetaDescription"] ?? "ApartmentRental - apartment listings and rentals.")" />

    <!-- Open Graph -->
    <meta property="og:site_name" content="ApartmentRental" />
    <meta property="og:title" content="@(ViewData["Title"] ?? "ApartmentRental")" />
    <meta property="og:description" content="@(ViewData["MetaDescription"] ?? "ApartmentRental - apartment listings and rentals.")" />

    @if (ViewData["MetaImage"] != null)
    {
        <meta property="og:image" content="@(ViewData["MetaImage"])" />
    }

    <meta property="og:type" content="website" />
    <meta property="og:url" content="@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}")" />

    <link rel="canonical" href="@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}")" />

    <!-- Google Analytics 4 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-JE04GD0ZE3"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'G-JE04GD0ZE3');
    </script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ApartmentRental.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <link rel="icon" type="image/x-icon" href="~/favicon.ico" asp-append-version="true" />

    @await RenderSectionAsync("Head", required: false)
</head>

<body class="app-body">
    <header class="app-header sticky-top">
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Apartments" asp-action="Index">
                    <i class="bi bi-buildings"></i> ApartmentRental
                </a>

                <form class="d-flex" asp-controller="Apartments" asp-action="Search" method="get">
                    <input class="form-control me-2"
                           type="search"
                           name="q"
                           value="@(Context.Request.Query["q"])"
                           placeholder="Search by title or lessor email..."
                           aria-label="Search" />
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </form>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="mainNav">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container my-4">
        @RenderBody()
    </main>

    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="validationToast" class="toast align-items-center text-bg-danger border-0" role="alert"
             aria-live="assertive" aria-atomic="true" data-bs-delay="6000">
            <div class="d-flex">
                <div class="toast-body" id="validationToastBody">
                    Please fix the errors and try again.
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const summary = document.querySelector(".validation-summary-errors ul");
            if (!summary) return;

            const items = Array.from(summary.querySelectorAll("li"))
                .map(li => li.textContent?.trim())
                .filter(Boolean);

            if (items.length === 0) return;

            const body = document.getElementById("validationToastBody");
            body.innerHTML = items.map(x => `<div>• ${escapeHtml(x)}</div>`).join("");

            const toastEl = document.getElementById("validationToast");
            const toast = new bootstrap.Toast(toastEl);
            toast.show();
        });

        function escapeHtml(str) {
            return String(str)
                .replaceAll("&", "&amp;")
                .replaceAll("<", "&lt;")
                .replaceAll(">", "&gt;")
                .replaceAll('"', "&quot;")
                .replaceAll("'", "&#039;");
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
